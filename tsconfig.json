{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "reflect-metadata",
      "resize-observer-browser",
      "webpack-env", "jest", "node"
    ],
    "noImplicitAny": false,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
   "exclude": [
    "node_modules",
    "dist",
    "build"
   ]
}

